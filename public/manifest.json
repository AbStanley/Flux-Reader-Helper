{
    "manifest_version": 3,
    "name": "Flux - Reader Helper",
    "version": "1.0.0",
    "description": "A helper for reading and learning languages.",
    "icons": {
        "16": "flux-reader-helper.png",
        "48": "flux-reader-helper.png",
        "128": "flux-reader-helper.png"
    },
    "permissions": [
        "sidePanel",
        "declarativeNetRequest"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "cors_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "action": {
        "default_title": "Open Reader Helper"
    }
}